<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- DISEÑO GENERAL DE LOS BOTON DEL MENU-->
   <item  android:state_pressed="true">
	     <shape android:shape="rectangle">
	     <solid  android:color="#FFD324"/> 
	     <corners android:radius="10dp"/>
	     <stroke  android:width="1dp"  android:color="#BCBCBC"/>
	     </shape>
   </item> 
    
    <!-- DISEÑO GENERAL DE LOS BOTON DEL MENU-SIN EFECTO DE CAMBIO DE COLOR -->
   <item >
	     <shape android:shape="rectangle">
	     <solid  android:color="#00B6B6B6"/> <!--COLOCAMOS ASI para que se pueda hacer traslucido en todas las tablets  -->
	     <corners android:radius="10dp"/>
	     <stroke  android:width="1dp"   android:color="#BCBCBC" />
	     </shape>
   </item>   

</selector>
